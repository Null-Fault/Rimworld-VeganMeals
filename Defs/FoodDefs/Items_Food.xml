<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="MealBase">
    <defName>VeganSimpleMeal</defName>
    <label>simple vegan meal</label>
    <description>A simple meal crafted from plant based foods.</description>
    <thingClass>ThingWithComps</thingClass>
    <graphicData>
      <texPath>Things/Item/Meal/VeganSimple</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <DeteriorationRate>10</DeteriorationRate>
      <MarketValue>13</MarketValue>
      <Mass>0.4</Mass>
      <WorkToMake>350</WorkToMake>
      <Nutrition>0.8</Nutrition>
    </statBases>
    <ingestible>
      <preferability>MealSimple</preferability>
      <optimalityOffsetHumanlikes>-5</optimalityOffsetHumanlikes>
      <optimalityOffsetFeedingAnimals>-10</optimalityOffsetFeedingAnimals>
      <ingestSound>Meal_Eat</ingestSound>
	  <maxNumToIngestAtOnce>1</maxNumToIngestAtOnce>
    </ingestible>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>5</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
      <li Class="CompProperties_Ingredients" />
      <li Class="CompProperties_FoodPoisonable" />
    </comps>
    <stackLimit>10</stackLimit>
  </ThingDef>

